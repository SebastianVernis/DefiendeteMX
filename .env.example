# Database Configuration
MONGODB_URI=mongodb://localhost:27017/defiendete-mx

# For production, use MongoDB Atlas or similar:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/defiendete-mx?retryWrites=true&w=majority

# JWT Secrets (for authentication)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# JWT Expiration Times
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Cloud Storage (if using external storage for evidence files)
# CLOUDINARY_CLOUD_NAME=your-cloud-name
# CLOUDINARY_API_KEY=your-api-key
# CLOUDINARY_API_SECRET=your-api-secret

# Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# SMS/Twilio Configuration (for SMS notifications)
# Get your credentials from: https://www.twilio.com/console
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890
# Optional: Webhook URL for delivery status updates
# TWILIO_STATUS_CALLBACK_URL=https://your-domain.com/api/webhooks/twilio-status

# Government API Integration (for future official partnerships)
# Note: As of 2025, no public APIs exist for Mexican government reporting
# These credentials are for future use when official APIs become available

# FGR (Fiscalía General de la República) API
# FGR_API_ENDPOINT=https://api.fgr.gob.mx/v1
# FGR_API_KEY=your-fgr-api-key
# FGR_API_SECRET=your-fgr-api-secret

# Policía Federal API
# POLICIA_API_ENDPOINT=https://api.policiafederal.gob.mx/v1
# POLICIA_API_KEY=your-policia-api-key
# POLICIA_API_SECRET=your-policia-api-secret

# Emergency Services (911) API
# EMERGENCIAS_911_API_ENDPOINT=https://api.911.gob.mx/v1
# EMERGENCIAS_911_API_KEY=your-911-api-key
# EMERGENCIAS_911_API_SECRET=your-911-api-secret

# Guardia Nacional API
# GUARDIA_NACIONAL_API_ENDPOINT=https://api.guardianacional.gob.mx/v1
# GUARDIA_NACIONAL_API_KEY=your-guardia-api-key
# GUARDIA_NACIONAL_API_SECRET=your-guardia-api-secret

# CNDH (Comisión Nacional de Derechos Humanos) API
# CNDH_API_ENDPOINT=https://api.cndh.org.mx/v1
# CNDH_API_KEY=your-cndh-api-key
# CNDH_API_SECRET=your-cndh-api-secret

# Environment
NODE_ENV=development
